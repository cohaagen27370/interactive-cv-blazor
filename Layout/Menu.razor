@using interactiveCvBlazor.Store
@inherits interactive_cv_blazor.Pages.BasePage
@inject GlobalState GlobalStateService

<RadzenSidebar @bind-Expanded="@SidebarExpanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "" ? "selected" : "")" Text="Présentation" Icon="person" Path="/" Click=@(() => SetPage("")) />
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "Trainings" ? "selected" : "")" Text="Ma formation" Icon="school" Path="Trainings" Click=@(() => SetPage("Trainings"))/>
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "Experiences" ? "selected" : "")" Text="Mes expériences" Icon="business_center" Path="Experiences" Click=@(() => SetPage("Experiences"))/>
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "Skills" ? "selected" : "")" Text="Mes savoirs-faire" Icon="category" Path="Skills" Click=@(() => SetPage("Skills"))/>
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "Being" ? "selected" : "")" Text="Mes savoirs-être" Icon="campaign" Path="Being" Click=@(() => SetPage("Being"))/>
        <RadzenPanelMenuItem class="@(GlobalStateService.Page == "Monitoring" ? "selected" : "")" Text="Veille techno & IA" Icon="memory" Path="Monitoring" Click=@(() => SetPage("Monitoring"))/>
        <RadzenPanelMenuItem Text="Télécharger mon CV" Icon="assignment" Path="/documents/CV-LaurentBlanquet.pdf" Target="_blank" />
    </RadzenPanelMenu>
</RadzenSidebar>


@code {
    
    [Parameter] public bool SidebarExpanded { get; set; }

    private void SetPage(string page)
    {
        this.GlobalStateService.SetPage(page);
    }

}